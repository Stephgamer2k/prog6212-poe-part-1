<Window x:Class="Contract_Monthly_Claim_System_PoE_part1.SubmitClaim"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contract_Monthly_Claim_System_PoE_part1"
        mc:Ignorable="d"
        Title="SubmitClaim" Height="520" Width="600">
    <Canvas>
        <Label Content="Submit a Claim" Canvas.Left="171" Canvas.Top="58" FontSize="35" FontWeight="Bold"/>
        <Label Content="Hours Worked:" Canvas.Left="171" Canvas.Top="170" FontSize="16"/>
        <Label Content="Amount" Canvas.Left="171" Canvas.Top="252" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center"/>
