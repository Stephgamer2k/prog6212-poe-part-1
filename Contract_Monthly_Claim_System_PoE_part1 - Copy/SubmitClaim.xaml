        <TextBox x:Name="TextBox_Amount" Canvas.Left="171" TextWrapping="Wrap" Canvas.Top="288" Width="194" Height="35"/>
        <Button x:Name="btn__Submit_Claim" Content="Submit Claim" Canvas.Left="217" Canvas.Top="405" Height="47" Width="166" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20" FontWeight="Bold"/>

    </Canvas>
</Window>
